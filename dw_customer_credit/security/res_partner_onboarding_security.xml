<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Create a new category first -->
        <record id="module_category_customer_management" model="ir.module.category">
            <field name="name">Customer Management</field>
            <field name="description">Customer related modules</field>
            <field name="sequence">200</field>
        </record>
        
        <!-- Then create the group with this category -->
        <record id="group_res_partner_onboarding_approver" model="res.groups">
            <field name="name">Customer Approver</field>
            <field name="category_id" ref="module_category_customer_management"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>