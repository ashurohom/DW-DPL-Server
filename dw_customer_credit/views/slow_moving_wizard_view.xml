<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_slow_moving_wizard_form" model="ir.ui.view">
            <field name="name">slow.moving.wizard.form</field>
            <field name="model">slow.moving.wizard</field>
            <field name="arch" type="xml">
                <form string="Slow / Non-Moving Inventory Report">
                    <sheet>
                        <div class="oe_title">
                            <h1>Slow / Non-Moving Inventory Aging Report</h1>
                            <h3>Track inventory aging by receipt batches</h3>
                        </div>
                        
                        <group>
                            <group string="Classification Thresholds">
                                <field name="slow_days" string="Consider Slow Moving after (days)"/>
                                <field name="non_moving_days" string="Consider Non-Moving after (days)"/>
                            </group>
                            
                            <group string="Filters">
                                <field name="location_id"/>
                                <field name="product_category_id"/>
                                <field name="product_id"/>
                            </group>
                        </group>
                        
                        <group string="Report Options">
                            <group>
                                <field name="show_age_buckets"/>
                            </group>
                        </group>
                        
                        <footer>
                            <button name="action_print_report" string="Generate Aging Report" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_slow_moving_wizard" model="ir.actions.act_window">
            <field name="name">Slow / Non-Moving Inventory</field>
            <field name="res_model">slow.moving.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_slow_moving_wizard_form"/>
        </record>

        <menuitem
            id="menu_report_slow_nonmoving"
            name="Slow / Non-Moving Inventory"
            parent="menu_accounting_print_reports"
            action="action_slow_moving_wizard"
            sequence="44"/>

    </data>
</odoo>
