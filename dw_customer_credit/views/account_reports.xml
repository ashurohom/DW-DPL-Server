<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_depreciation_sheet_wizard_form" model="ir.ui.view">
        <field name="name">depreciation.sheet.wizard.form</field>
        <field name="model">depreciation.sheet.wizard</field>
        <field name="arch" type="xml">
            <form string="Depreciation Sheet Report">
                <sheet>
                    <div class="oe_title">
                        <h1>Depreciation Sheet Report</h1>
                        <h3>Generate depreciation report for a specific period</h3>
                    </div>
                    
                    <group>
                        <group string="Period">
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        
                        <group string="Filters">
                            <field name="state" widget="radio" options="{'horizontal': true}"/>
                            <field name="category_id"/>
                            <field name="partner_id"/>
                        </group>
                    </group>
                    
                    <footer>
                        <button name="action_print_depreciation_sheet" string="Generate PDF Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    
    <record id="action_depreciation_sheet_wizard" model="ir.actions.act_window">
        <field name="name">Depreciation Sheet Report</field>
        <field name="res_model">depreciation.sheet.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_depreciation_sheet_wizard_form"/>
        <field name="target">new</field>
    </record>

   
