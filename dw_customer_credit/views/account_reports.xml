    <record id="view_fixed_asset_register_wizard_form" model="ir.ui.view">
        <field name="name">fixed.asset.register.wizard.form</field>
        <field name="model">fixed.asset.register.wizard</field>
        <field name="arch" type="xml">
            <form string="Fixed Asset Register Report">
                <!-- <header>
                    <button name="action_generate_assets" type="object" string="Generate" class="btn-primary"/>
                    <button name="action_print_fixed_asset_register" string="Generate PDF Report" type="object" class="btn-secondary" invisible="not has_data"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </header> -->
                
                <sheet>
                    <!-- Add has_data as an invisible field -->
                    <field name="has_data" invisible="1"/>
                    
                    <div class="oe_title">
                        <h1>Fixed Asset Register Report</h1>
                        <h3>Generate a comprehensive report of your fixed assets</h3>
                    </div>
                    
                    <group>
                        <group string="Basic Filters">
                            <field name="date_as_of"/>
                            
                            <field name="state" widget="radio" options="{'horizontal': true}"/>
                        </group>
                        
                        <group string="Asset Details">
                            <field name="category_id"/>
                            <field name="partner_id"/>
                        </group>
                    </group>
                    
                    <group string="Date Range">
                        <group>
                            <field name="acquisition_date_from"/>
                            <field name="acquisition_date_to"/>
                        </group>
                    </group>
                    
                    <group string="Value Range">
                        <group>
                            <field name="min_value"/>
                            <field name="max_value"/>
                        </group>
                    </group>
                    
                    <!-- Asset Lines Preview -->
                    <div class="oe_title" invisible="not has_data">
                        <h3>Asset Preview</h3>
                    </div>
                    
                    <div invisible="not has_data">
                        <field name="asset_lines_html" nolabel="1" widget="html"/>
                    </div>
                    
                    <!-- Summary Section -->
                    <div class="oe_title" invisible="not has_data">
                        <h3>Summary</h3>
                    </div>
                    
                    <group invisible="not has_data">
                        <group>
                            <field name="total_assets" string="Total Assets"/>
                            <field name="total_original_value" widget="monetary" string="Total Original Value"/>
                            <field name="total_depreciation" widget="monetary" string="Total Depreciation"/>
                            <field name="total_net_value" widget="monetary" string="Total Net Book Value"/>
                        </group>
                    </group>
                    
                    <!-- Footer buttons -->
                    <footer>
                        <button name="action_generate_assets" type="object" string="Generate" class="btn-primary"/>
                        <button name="action_print_fixed_asset_register" string="Generate PDF Report" type="object" class="btn-secondary" invisible="not has_data"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    
