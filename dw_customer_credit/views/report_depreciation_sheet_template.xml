<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_depreciation_sheet_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <html>
                    <head>
                        <meta charset="utf-8"/>
                        <style>
                            body { font-family: Arial, sans-serif; font-size: 10px; margin: 20px; }
                            .header { text-align: center; margin-bottom: 20px; padding-bottom: 15px; border-bottom: 2px solid #333; }
                            .header h2 { margin-bottom: 5px; color: #2c3e50; }
                            .header p { margin: 3px 0; color: #555; }
                            .company-info { text-align: left; margin-bottom: 15px; }
                            .company-info p { margin: 2px 0; }
                            table { width: 100%; border-collapse: collapse; margin-top: 15px; font-size: 9px; }
                            th { background-color: #2c3e50; color: white; padding: 6px; text-align: left; border: 1px solid #ddd; font-weight: bold; }
                            td { padding: 4px; border: 1px solid #ddd; }
                            .text-right { text-align: right; }
                            .text-center { text-align: center; }
                            .text-left { text-align: left; }
                            .total-row { font-weight: bold; background-color: #e8f4f8; }
                            .category-header { background-color: #d9edf7; font-weight: bold; color: #31708f; }
                            .no-data { text-align: center; padding: 30px; color: #666; font-style: italic; }
                            .summary-box { margin-top: 25px; padding: 15px; border: 1px solid #bce8f1; background-color: #d9edf7; border-radius: 5px; }
                            .summary-box h4 { margin-top: 0; color: #31708f; border-bottom: 1px solid #bce8f1; padding-bottom: 5px; }
                            .footer { margin-top: 30px; padding-top: 10px; border-top: 1px solid #ddd; text-align: center; color: #777; font-size: 8px; }
                            .currency { font-family: monospace; }
                            .positive { color: #27ae60; }
                            .warning { color: #e74c3c; }
                            .info { color: #3498db; }
                        </style>
                    </head>
                    <body>
                        <!-- Company Information -->
                        <div class="company-info">
                            <h3 t-esc="doc.env.company.name"/>
                            <p t-esc="doc.env.company.street or ''"/>
                            <p t-if="doc.env.company.street2" t-esc="doc.env.company.street2"/>
                            <p>
                                <span t-if="doc.env.company.city" t-esc="doc.env.company.city + ', '"/>
                                <span t-if="doc.env.company.state_id" t-esc="doc.env.company.state_id.name + ' '"/>
                                <span t-if="doc.env.company.zip" t-esc="doc.env.company.zip + ' '"/>
                                <span t-if="doc.env.company.country_id" t-esc="doc.env.company.country_id.name"/>
                            </p>
                        </div>
                        <div class="header">
                            <h2>DEPRECIATION SHEET</h2>
                            <p>Period: <strong><t t-esc="doc.date_from"/> to <t t-esc="doc.date_to"/></strong></p>
                            <t t-set="today" t-value="datetime.datetime.now().strftime('%Y-%m-%d')"/>
                            <p>Generated On: <strong><t t-esc="today"/></strong></p>
                        </div>
                        <div style="margin-bottom: 15px; padding: 8px; background-color: #f8f9fa; border: 1px solid #dee2e6; border-radius: 4px; font-size: 8px;">
                            <strong>Filters Applied:</strong>
                            <t t-set="filters" t-value="[]"/>
                            <t t-if="doc.state and doc.state != 'all'">
                                <t t-set="status_name">
                                    <t t-if="doc.state == 'draft'">Draft</t>
                                    <t t-if="doc.state == 'open'">Running</t>
                                    <t t-if="doc.state == 'all'">All Status</t>
                                </t>
                                <t t-set="filters" t-value="filters + ['Status: ' + status_name]"/>
                            </t>
                            <t t-if="doc.category_id">
                                <t t-set="filters" t-value="filters + ['Category: ' + doc.category_id.name]"/>
                            </t>
                            <t t-if="doc.partner_id">
                                <t t-set="filters" t-value="filters + ['Vendor: ' + doc.partner_id.name]"/>
                            </t>
                            <t t-if="not filters">
                                <span>No filters applied - Showing all assets</span>
                            </t>
                            <t t-if="filters">
                                <t t-foreach="filters" t-as="filter" t-index="filter_index">
                                    <span class="info" style="margin-left: 10px;">
                                        <t t-esc="filter"/>
                                        <t t-if="filter_index != len(filters) - 1"> | </t>
                                    </span>
                                </t>
                            </t>
                        </div>
                        <table>
                            <thead>
                                <tr>
                                    <th width="4%">#</th>
                                    <th width="12%">Asset Code</th>
                                    <th width="25%">Asset Name</th>
                                    <th width="15%">Category</th>
                                    <th width="15%" class="text-right">Original Value</th>
                                    <th width="15%" class="text-right">Salvage Value</th>
                                    <th width="14%" class="text-right">Period Depreciation</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="data" t-value="doc._get_depreciation_data()"/>
                                <t t-set="depreciation_lines" t-value="data.get('lines', [])"/>
                                <t t-set="total_period_depreciation" t-value="data.get('total_period_depreciation', 0)"/>
                                <t t-set="total_original_value" t-value="0"/>
                                <t t-set="total_salvage_value" t-value="0"/>
                                <t t-set="total_assets" t-value="data.get('total_assets', 0)"/>
                                <t t-set="serial_no" t-value="1"/>
                                
                                <t t-if="not depreciation_lines or (depreciation_lines and len(depreciation_lines) == 1 and depreciation_lines[0].get('asset_code') == 'NO-DEPRECIATION-FOUND')">
                                    <tr>
                                        <td colspan="7" class="no-data">
                                            <h4>No Depreciation Data Found</h4>
                                            <p>No depreciation entries found for the selected period.</p>
                                            <p>Please check if assets have depreciation schedules set up.</p>
                                        </td>
                                    </tr>
                                </t>
                                
                                <t t-if="depreciation_lines and len(depreciation_lines) > 0 and not (len(depreciation_lines) == 1 and depreciation_lines[0].get('asset_code') == 'NO-DEPRECIATION-FOUND')">
                                    <t t-foreach="depreciation_lines" t-as="line">
                                        <t t-set="original_val" t-value="float(line.get('original_value', 0))"/>
                                        <t t-set="salvage_val" t-value="float(line.get('salvage_value', 0))"/>
                                        <t t-set="period_dep" t-value="float(line.get('period_depreciation', 0))"/>
                                        
                                        <t t-set="total_original_value" t-value="total_original_value + original_val"/>
                                        <t t-set="total_salvage_value" t-value="total_salvage_value + salvage_val"/>
                                        
                                        <tr>
                                            <td class="text-center"><t t-esc="serial_no"/></td>
                                            <td><t t-esc="line.get('asset_code', '')"/></td>
                                            <td><t t-esc="line.get('asset_name', '')"/></td>
                                            <td><t t-esc="line.get('category', '')"/></td>
                                            <td class="text-right currency"><t t-esc="'%.2f' % original_val"/></td>
                                            <td class="text-right currency"><t t-esc="'%.2f' % salvage_val"/></td>
                                            <td class="text-right currency">
                                                <span t-att-class="'warning' if period_dep > 0 else ''">
                                                    <t t-esc="'%.2f' % period_dep"/>
                                                </span>
                                            </td>
                                        </tr>
                                        
                                        <t t-set="serial_no" t-value="serial_no + 1"/>
                                    </t>
                                    <tr class="total-row" style="background-color: #d4edda; border-top: 2px solid #155724;">
                                        <td colspan="4" style="text-align: right; padding-right: 10px; font-size: 10px;">
                                            <strong>GRAND TOTAL (<t t-esc="total_assets"/> Assets):</strong>
                                        </td>
                                        <td class="text-right" style="font-size: 10px;">
                                            <strong><t t-esc="'%.2f' % total_original_value"/></strong>
                                        </td>
                                        <td class="text-right" style="font-size: 10px;">
                                            <strong><t t-esc="'%.2f' % total_salvage_value"/></strong>
                                        </td>
                                        <td class="text-right" style="font-size: 10px;">
                                            <strong><t t-esc="'%.2f' % total_period_depreciation"/></strong>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <t t-if="depreciation_lines and len(depreciation_lines) > 0 and not (len(depreciation_lines) == 1 and depreciation_lines[0].get('asset_code') == 'NO-DEPRECIATION-FOUND')">
                            <div class="summary-box">
                                <h4>Summary Statistics</h4>
                                <div style="display: flex; flex-wrap: wrap; justify-content: space-between;">
                                    <div style="flex: 0 0 48%; margin-bottom: 8px;">
                                        <strong>Total Assets:</strong> <t t-esc="total_assets"/>
                                    </div>
                                    <div style="flex: 0 0 48%; margin-bottom: 8px;">
                                        <strong>Total Original Value:</strong> <t t-esc="'%.2f' % total_original_value"/>
                                    </div>
                                    <div style="flex: 0 0 48%; margin-bottom: 8px;">
                                        <strong>Total Salvage Value:</strong> <t t-esc="'%.2f' % total_salvage_value"/>
                                    </div>
                                    <div style="flex: 0 0 48%; margin-bottom: 8px;">
                                        <strong>Total Period Depreciation:</strong> <t t-esc="'%.2f' % total_period_depreciation"/>
                                    </div>
                                    <div style="flex: 0 0 48%; margin-bottom: 8px;">
                                        <strong>Period:</strong> <t t-esc="doc.date_from"/> to <t t-esc="doc.date_to"/>
                                    </div>
                                    <div style="flex: 0 0 48%; margin-bottom: 8px;">
                                        <strong>Average Depreciation per Asset:</strong> 
                                        <t t-esc="'%.2f' % (total_period_depreciation/total_assets if total_assets else 0)"/>
                                    </div>
                                    <div style="flex: 0 0 48%; margin-bottom: 8px;">
                                        <strong>Depreciable Value:</strong> 
                                        <t t-set="total_depreciable" t-value="total_original_value - total_salvage_value"/>
                                        <t t-esc="'%.2f' % total_depreciable"/>
                                    </div>
                                    <div style="flex: 0 0 48%; margin-bottom: 8px;">
                                        <strong>Depreciation % of Original Value:</strong> 
                                        <t t-set="dep_percentage" t-value="(total_period_depreciation/total_original_value*100) if total_original_value else 0"/>
                                        <t t-esc="'%.2f' % dep_percentage"/>%
                                    </div>
                                </div>
                            </div>
                        </t>
                        <div class="footer">
                            <p>Depreciation Sheet Report | Generated by <t t-esc="doc.env.user.name"/> | Page 1 of 1</p>
                            <p>This report shows depreciation entries for the period <t t-esc="doc.date_from"/> to <t t-esc="doc.date_to"/></p>
                        </div>
                    </body>
                </html>
            </t>
        </t>
    </template>

    <record id="action_report_depreciation_sheet" model="ir.actions.report">
        <field name="name">Depreciation Sheet</field>
        <field name="model">depreciation.sheet.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">dw_customer_credit.report_depreciation_sheet_template</field>
        <field name="print_report_name">'Depreciation Sheet - {date_from} to {date_to}'</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>
</odoo>