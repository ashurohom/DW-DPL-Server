
<odoo>
    <record id="view_partner_form_tds" model="ir.ui.view">
        <field name="name">res.partner.form.tds</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="TDS Details">
                    <group>
                        <field name="is_indian_resident"/>
                        <field name="tds_section_id"
                               domain="[('residency','=',is_indian_resident)]"/>
                        <field name="tds_rate"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
