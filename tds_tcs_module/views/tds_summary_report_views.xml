<!-- views/tds_summary_report_views.xml -->

<odoo>
    <!-- TDS Summary Report Form View -->
    <record id="view_tds_summary_report_form" model="ir.ui.view">
        <field name="name">tds.summary.report.form</field>
        <field name="model">tds.summary.report</field>
        <field name="arch" type="xml">
            <form string="TDS Summary Report">
                <header>
                    <button name="action_generate_report" string="Generate Report" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'draft'"/>
                    <button name="action_print_summary" string="Print Summary" 
                            type="object" class="oe_highlight"
                            invisible="state == 'draft'"/>
                    <button name="action_print_detailed" string="Print Detailed" 
                            type="object"
                            invisible="state == 'draft'"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" 
                            type="object"
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,printed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_print_summary" type="object" 
                                class="oe_stat_button" icon="fa-print"
                                invisible="state == 'draft'">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Print</span>
                                <span class="o_stat_text">Summary</span>
                            </div>
                        </button>
                        <button name="action_print_detailed" type="object" 
                                class="oe_stat_button" icon="fa-file-text-o"
                                invisible="state == 'draft'">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Print</span>
                                <span class="o_stat_text">Detailed</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Report Name..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="tds_section_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Vendor Summary" invisible="state == 'draft'">
                            <group>
                                <group>
                                    <field name="total_vendors" readonly="1"/>
                                    <field name="total_invoices" readonly="1"/>
                                </group>
                                <group>
                                    <field name="total_taxable_amount" readonly="1" widget="monetary"/>
                                    <field name="total_tds_amount" readonly="1" widget="monetary"/>
                                    <field name="total_invoice_amount" readonly="1" widget="monetary"/>
                                </group>
                            </group>
                            <field name="vendor_summary_ids" nolabel="1">
                                <tree decoration-info="tds_amount &gt; 0" create="false" delete="false">
                                    <field name="partner_id"/>
                                    <field name="pan_number"/>
                                    <field name="tds_section_code"/>
                                    <field name="tds_rate"/>
                                    <field name="invoice_count"/>
                                    <field name="taxable_amount" sum="Total"/>
                                    <field name="tds_amount" sum="Total"/>
                                    <field name="invoice_amount" sum="Total"/>
                                    <field name="currency_id" invisible="1"/>
                                    <button name="action_view_invoices" type="object" 
                                            icon="fa-eye" string="View Invoices"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Invoice Details" invisible="state == 'draft'">
                            <field name="detail_line_ids" nolabel="1">
                                <tree decoration-muted="tds_amount == 0" create="false" delete="false">
                                    <field name="invoice_date"/>
                                    <field name="invoice_number"/>
                                    <field name="partner_id"/>
                                    <field name="pan_number"/>
                                    <field name="tds_section_code"/>
                                    <field name="tds_rate"/>
                                    <field name="taxable_amount" sum="Total"/>
                                    <field name="tds_amount" sum="Total"/>
                                    <field name="invoice_amount" sum="Total"/>
                                    <field name="currency_id" invisible="1"/>
                                    <button name="action_view_invoice" type="object" 
                                            icon="fa-external-link" string="Open Invoice"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Notes">
                            <field name="notes" placeholder="Add any notes or comments about this report..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- TDS Summary Report Tree View -->
    <record id="view_tds_summary_report_tree" model="ir.ui.view">
        <field name="name">tds.summary.report.tree</field>
        <field name="model">tds.summary.report</field>
        <field name="arch" type="xml">
            <tree string="TDS Summary Reports" decoration-success="state == 'generated'" 
                  decoration-primary="state == 'printed'">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="total_vendors"/>
                <field name="total_invoices"/>
                <field name="total_tds_amount" sum="Total TDS"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- TDS Summary Report Search View -->
    <record id="view_tds_summary_report_search" model="ir.ui.view">
        <field name="name">tds.summary.report.search</field>
        <field name="model">tds.summary.report</field>
        <field name="arch" type="xml">
            <search string="Search TDS Summary Reports">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="tds_section_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Generated" name="generated" domain="[('state', '=', 'generated')]"/>
                <filter string="Printed" name="printed" domain="[('state', '=', 'printed')]"/>
                <separator/>
                <filter string="This Month" name="this_month" 
                        domain="[('date_from', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('date_to', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Quarter" name="this_quarter" 
                        domain="[('date_from', '&gt;=', (context_today() - relativedelta(months=2, day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    <filter string="Period" name="group_period" context="{'group_by': 'date_from'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_tds_summary_report" model="ir.actions.act_window">
        <field name="name">TDS Summary Report</field>
        <field name="res_model">tds.summary.report</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_this_quarter': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first TDS Summary Report
            </p>
            <p>
                This report shows all vendors and their TDS transactions for a selected period.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_tds_summary_report"
              name="TDS Summary Report"
              parent="account.menu_finance_reports"
              action="action_tds_summary_report"
              sequence="55"/>

</odoo>