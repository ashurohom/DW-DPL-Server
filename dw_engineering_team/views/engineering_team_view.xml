<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ================= TREE VIEW ================= -->
    <record id="view_engineering_team_tree" model="ir.ui.view">
        <field name="name">engineering.team.tree</field>
        <field name="model">engineering.team</field>
        <field name="arch" type="xml">
            <tree string="Engineering Analysis">
                <field name="lead_id"/>
                <field name="partner_id"/>
                <field name="engineer_id"/>
                <field name="state"/>
                <field name="date_done"/>
            </tree>
        </field>
    </record>

    <!-- ================= FORM VIEW ================= -->
    <record id="view_engineering_team_form" model="ir.ui.view">
        <field name="name">engineering.team.form</field>
        <field name="model">engineering.team</field>
        <field name="arch" type="xml">

            <form string="Engineering Analysis">

                <!-- REQUIRED FOR PRODUCT DOMAIN -->
                <field name="company_id" invisible="1"/>

                <header>
                    <button name="action_analysis_done"
                            type="object"
                            string="Analysis Done"
                            class="btn-primary"
                            groups="dw_engineering_product.group_engineering_team"
                            invisible="state == 'done'"/>
                    <field name="state" widget="statusbar"/>
                </header>

                <sheet>
                    <group>
                        <field name="lead_id"/>
                        <field name="partner_id" readonly="1"/>
                        <field name="engineer_id"/>
                        <field name="date_done" readonly="1"/>
                    </group>

                    <notebook>

                        <!-- ENGINEERING DETAILS -->
                        <page string="Engineering Details">
                            <group>
                                <field name="design_ref" filename="design_ref_filename"/>
                                <field name="estimation_time"/>
                                <field name="engineering_notes"/>
                            </group>
                        </page>

                        <!-- PRODUCTS -->
                        <page string="Products">
                            <field name="product_line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="cost_price"/>
                                    <field name="cost_price_m"
                                           groups="dw_engineering_product.group_management_team"/>
                                    <field name="total_price" readonly="1"/>
                                </tree>
                            </field>
                        </page>

                        <!-- BILL OF MATERIALS -->
                        <page string="Bill of Materials">

                            <!-- BOM SELECTION -->
                            <group>
                                <field name="bom_ids"
                                       widget="many2many_tags"
                                       options="{'no_create': True}"/>
                            </group>

                            <!-- EXPLODED BOM (CLEAN VIEW) -->
                            <field name="bom_exploded_line_ids" nolabel="1">
                                <tree create="0" edit="0" delete="0">

                                    <!-- TECHNICAL FIELD (HIDDEN) -->
                                    <!-- <field name="engineering_product_line_id" invisible="1"/> -->

                                    <!-- USER FRIENDLY PRODUCT NAME -->
                                    <field name="main_product_display"
                                           string="Engineering Product"/>

                                    <field name="component_id" string="Component"/>
                                    <field name="bom_qty" string="BoM Qty"/>
                                    <field name="engineering_qty" string="Eng Qty"/>
                                    <field name="total_required_qty" string="Total Required"/>
                                    <field name="component_unit_price" string="Unit Price"/>
                                    <field name="component_total_price" string="Total Price"/>
                                </tree>
                            </field>

                        </page>

                    </notebook>
                </sheet>
            </form>

        </field>
    </record>

    <!-- ================= ACTION ================= -->
    <record id="action_engineering_team" model="ir.actions.act_window">
        <field name="name">Engineering Analysis</field>
        <field name="res_model">engineering.team</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ================= MENUS ================= -->
    <menuitem id="menu_engineering_root" name="Engineering" sequence="10"/>
    <menuitem id="menu_engineering_analysis"
              name="Analysis"
              parent="menu_engineering_root"
              action="action_engineering_team"/>

</odoo>
