<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="quotation_report_document">
        <t t-call="web.basic_layout">

            <style>
                /* REMOVE DEFAULT ODOO PAGE BORDER */
                .page {
                    border: none !important;
                }

                /* MAIN PAGE BORDER */
                .quotation-page {
                    border: 1px solid #262424;
                    padding: 10px;
                    box-sizing: border-box;
                    font-size: 14px;
                }

                table {
                    width: 100%;
                    border-collapse: collapse;
                }

                table:first-child {
                    border-top: none;
                }


                td, th {
                    border: 1px solid #262424;
                    padding: 6px;
                    vertical-align: middle;
                }

                .no-border {
                    border: none !important;
                }

                .header-title {
                    font-size: 26px;
                    font-weight: bold;
                    color: #5b7bd5;
                    text-align: right;
                    margin-bottom: 3px;
                }

                .section-title {
                    background: #cfe2f3;
                    font-weight: bold;
                    text-align: center;
                    font-size: 20px;
                    border-top: none !important;
                }

                .no-top-border {
                    border-top: none !important;
                }



                .table-header {
                    background: #cfe2f3;
                    font-weight: bold;
                    text-align: center;
                }

                .right {
                    text-align: right;
                }

                .center {
                    text-align: center;
                }

                .no-page-break {
                    page-break-inside: avoid;
                    break-inside: avoid;
                    page-break-before: avoid;
                }

                .header-box {
                    border: 1px solid #262424;   
                    border-top: 1px solid #262424;
                }


            </style>

            <t t-foreach="docs" t-as="o">

                <div class="page quotation-page">

                    <!-- HEADER -->
                    
                    <table class="header-box">
                        <tr class="no-border">
                            <td class="no-border" style="width:40%;">
                                <img t-if="o.company_id.logo"
                                    t-att-src="image_data_uri(o.company_id.logo)"
                                    style="width:160px;"/>
                            </td>
                            <td class="no-border" style="width:60%;">
                                <div class="header-title">
                                    Duisport Packing Logistics India Pvt. Ltd
                                </div>
                                <div class="right">
                                    Plot No.-576, Sector-8, IMT Manesar, Gurugram, Haryana<br/>
                                    Gurugram-122050 (India). GSTIN: 06AAECD5705A1Z9<br/>
                                    CIN: U20299PN2013FTC146359
                                </div>
                            </td>
                        </tr>
                    </table>


                    <!-- QUOTATION TITLE -->
                    <table>
                        <tr>
                            <td class="section-title no-top-border">Quotation</td>
                        </tr>
                    </table>


                    <!-- CUSTOMER + QUOTATION INFO -->
                    <table>
                        <tr>
                            <!-- LEFT BLOCK -->
                            <td style="width:20%;"><b>Customer Name:-</b></td>
                            <td style="width:40%;">
                                <t t-esc="o.partner_id.name"/>
                            </td>

                            <!-- RIGHT BLOCK (DATE) -->
                            <td style="width:20%;" rowspan="2" class="center">
                                <b>Date:</b>
                            </td>
                            <td style="width:20%;" rowspan="2" class="center">
                                <t t-esc="o.date_order.strftime('%d-%m-%Y')"/>
                            </td>
                        </tr>

                        <tr>
                            <td><b>Address:-</b></td>
                            <td>
                                <t t-esc="o.partner_id.contact_address"/>
                            </td>
                        </tr>

                        <tr>
                            <!-- LEFT BLOCK -->
                            <td><b>Contact Person:-</b></td>
                            <td>
                                <t t-esc="o.partner_id.name"/>
                            </td>

                            <!-- RIGHT BLOCK (QUOTATION REF) -->
                            <td rowspan="2" class="center">
                                <b>Quotation Ref No:</b>
                            </td>
                            <td rowspan="2" class="center">
                                <t t-esc="o.name"/>
                            </td>
                        </tr>

                        <tr>
                            <td><b>Contact Details:-</b></td>
                            <td>
                                <t t-esc="o.partner_id.phone or ''"/>
                            </td>
                        </tr>

                        <tr>
                            <!-- LEFT BLOCK -->
                            <td><b>E-mail Address:-</b></td>
                            <td>
                                <t t-esc="o.partner_id.email or ''"/>
                            </td>

                            <!-- RIGHT BLOCK (REVISION) -->
                            <td class="center">
                                <b>Revision no-</b>
                            </td>
                            <td class="center">
                                DPL/DEL/03 Rev 00
                            </td>
                        </tr>
                    </table>


                    <!-- PRODUCT + TERMS TABLE (SINGLE FLOW – NO FORCED PAGE BREAK) -->
                    <table>

                        <!-- PRODUCT HEADER -->
                        <tr class="table-header">
                            <td class="no-top-border" style="width:5%;">S.No</td>
                            <td class="no-top-border" style="width:10%;">MOQ</td>
                            <td class="no-top-border" style="width:45%;">Description</td>
                            <td class="no-top-border" style="width:10%;">UOM</td>
                            <td class="no-top-border" style="width:10%;">Qty</td>
                            <td class="no-top-border" style="width:20%;">Price / Nos</td>
                        </tr>

                        <t t-set="i" t-value="1"/>
                        <t t-foreach="o.order_line" t-as="line">
                            <tr>
                                <td class="center"><t t-esc="i"/></td>
                                <td class="center"><t t-esc="line.product_uom_qty"/></td>
                                <td><t t-esc="line.name"/></td>
                                <td class="center"><t t-esc="line.product_uom.name"/></td>
                                <td class="center"><t t-esc="line.product_uom_qty"/></td>
                                <td class="right">
                                    <t t-esc="line.price_unit"/>
                                </td>
                            </tr>
                            <t t-set="i" t-value="i + 1"/>
                        </t>

                        <!-- TERMS TITLE (IMMEDIATELY AFTER PRODUCTS) -->
                        <tr>
                            <td colspan="6" class="section-title">
                                Terms &amp; Conditions:
                            </td>
                        </tr>

                        <!-- TERMS CONTENT -->
                        <tr>
                            <td colspan="6" style="border-top:none; padding:10px;">
                                <div style="font-size:14px; line-height:1.6;">

                                    <strong>Price:</strong><span style="font-weight: normal;">
                                        The quoted price is exclusive of GST.
                                    </span><br/><br/>


                                    <b>Transportation:</b> Freight will be charged Extra at the Actual if the truck freight cost is not matched due to less qty.<br/><br/>

                                    <b>MOQ:</b> Rates are valid only if order received as per the MOQ.<br/><br/>

                                    <b>Inventory:</b> Stock will be maintained based on the schedule given – 15 to 20% extra – if there is any change in plan or specification or short closure of the order, you need to bear the full cost of material kept in Inventory – In the case of SFG / FG parts.<br/><br/>

                                    For the plain boards, it can be mutually discussed and resolved depending on the usability of the boards.<br/><br/>

                                    <b>GST:</b> Extra as applicable depending on the product.<br/><br/>

                                    <b>HSN Code:</b><br/>
                                    Corrugated box/board only – 48191010<br/>
                                    Corrugated box with pallet – 48191010<br/>
                                    Wood / Plywood box/pallet – 44151000<br/><br/>

                                    <b>Lead Time:</b> First set 10 to 15 days - 3 months tentative schedule to be shared by you, 2nd set onwards based on the Schedule shared by you.<br/><br/>

                                    <b>Additional Process / Treatment cost:</b> Extra as applicable – will be processed and chargeable as mutually agreed upon.<br/><br/>

                                    <b>Quotation Validity:</b> 7 days.<br/><br/>

                                    <b>Payment Terms:</b> Advance or 30 days credit period from date of Invoice.<br/><br/>

                                    <b>General Note:</b><br/>
                                    1. As per ISPM-15 standard, Duisport does not guarantee for mold and fungus formation due to increase in moisture levels in wood/Plywood.<br/>
                                    2. As per ISPM-15 standard, plywood and corrugated boards are exempted from fumigation / heat treatment.<br/>
                                    3. If market rates fluctuate, then rates may be revised on mutual concern.<br/>
                                    4. Any design or process change will revise prices accordingly.<br/>
                                    5. Outsourced items are governed by supplier terms.<br/>
                                    6. Third-party testing costs will be charged at actuals.<br/><br/>

                                    <b>For Duisport Packing Logistics India Pvt. Ltd.</b><br/><br/>
                                    <b>Khushbu Baiswar</b><br/>
                                    Customer Support<br/>
                                    Mobile No.: +91 7408247865

                                </div>
                            </td>
                        </tr>

                    </table>




                </div>

            </t>

        </t>
    </template>

</odoo>
